{
  "expo": {
    "name": "Is This True",
    "slug": "is-this-true",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "exp",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a1647"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.istrue.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to take photos for analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to analyze images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a1647"
      },
      "package": "com.istrue.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Is This True to access your photos to analyze images.",
          "cameraPermission": "Allow Is This True to use your camera to take photos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Is This True to access your photos.",
          "savePhotosPermission": "Allow Is This True to save photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "is-this-true"
      }
    }
  }
}
